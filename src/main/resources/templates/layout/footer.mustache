<script>
  $('#btn-save').on('click', function() {
        save();
    });

  function save() {
    var data = {
          title: $('#title').val(),
          author: $('#author').val(),
          content: $('#content').val()
        };

      $.ajax({
        type: 'POST',
        url: '/api/v1/posts',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
      }).done(function(){
        alert('글이 등록되었습니다.');
        window.location.href = '/';
      }).fail(function(error){
        alert(JSON.stringify(error));
      });
  }
</script>

